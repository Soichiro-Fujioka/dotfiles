# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# increase window size
alt + ctrl - h : yabai -m window --resize left:-20:0
alt + ctrl - j : yabai -m window --resize bottom:0:20
alt + ctrl - k : yabai -m window --resize top:0:-20
alt + ctrl - l : yabai -m window --resize right:20:0

# decrease window size
alt + ctrl + shift - h : yabai -m window --resize left:20:0
alt + ctrl + shift - j : yabai -m window --resize bottom:0:-20
alt + ctrl + shift - k : yabai -m window --resize top:0:20
alt + ctrl + shift - l : yabai -m window --resize right:-20:0

# swap window
alt + shift - h : yabai -m window --swap west
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - l : yabai -m window --swap east

# toggle window split type
alt - s : yabai -m window --toggle split

# Rotate the window tree clock-wise
alt - r : yabai -m space --rotate 90

# Float window
alt - f : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# mirror window
alt - y : yabai -m space --mirror y-axis
alt - x : yabai -m space --mirror x-axis

# mirror window
alt - e : yabai --start-service
alt - d : yabai --stop-service

